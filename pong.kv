#:kivy 1.9.0

<PongBall>:
    size: 25, 25
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<PongPlayer>:
    size: 25, 100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongEnemy>:
    size: 20, 600
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size


<PongGame>:

    ball: pong_ball

    player1: player_left
    enemy1: enemy_right

    canvas:
        Rectangle:
            pos: self.center_x - 2, 0
            size: 4, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.enemy1.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPlayer:
        id: player_left
        x: root.x + 10
        center_y: root.center_y

    PongEnemy:
        id: enemy_right
        x: root.width - self.width
        center_y: root.center_y
